<?xml version="1.0" encoding="UTF-8" ?>
<Application
  x:Class="MauiPlayground.App"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:local="clr-namespace:MauiPlayground"
  xmlns:material="clr-namespace:UraniumUI.Material.Resources;assembly=UraniumUI.Material">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles/FontImages.xaml" />
        <ResourceDictionary Source="Resources/Styles/MaterialColorOverride.xaml" />
        <!--  TODO Order dependent, for now ensure Styles.xaml is used last https://github.com/enisn/UraniumUI/issues/241  -->
        <ResourceDictionary Source="Resources/Styles/MaterialStyleOverride.xaml" />
        <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
        <ResourceDictionary Source="Resources/Styles/CustomStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
