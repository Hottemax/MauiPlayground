<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="MauiPlayground.Controls.LabeledEntry"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:ctrls="clr-namespace:MauiPlayground.Controls"
  xmlns:material="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
  xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
  x:Name="self"
  x:DataType="ctrls:LabeledEntry">
  <ContentView.Content>
    <StackLayout>
      <Grid BindingContext="{x:Reference self}">

        <!--  TODO Add other bindings, do renaming etc if basic layout works  -->

        <material:TextField Title="{Binding LabelText}" Grid.ColumnSpan="2" Text="{Binding EntryText}">
          <material:TextField.Behaviors />
        </material:TextField>
        <ImageButton
          Grid.Column="1"
          WidthRequest="20"
          Margin="0,0,5,0"
          HorizontalOptions="End"
          VerticalOptions="Center"
          BackgroundColor="Transparent"
          Command="{Binding Cmd}"
          CommandParameter="{Binding CmdParam}"
          Source="{Binding CmdButtonImage, TargetNullValue={StaticResource IconArrowRight}}" />
      </Grid>
    </StackLayout>
  </ContentView.Content>
</ContentView>
