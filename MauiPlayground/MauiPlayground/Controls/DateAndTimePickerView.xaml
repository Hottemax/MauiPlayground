<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="MauiPlayground.Controls.DateAndTimePickerView"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:material="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
  xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
  x:Name="self">
  <HorizontalStackLayout>
    <material:DatePickerField Title="{Binding LabelTextDate, Source={x:Reference self}}" AllowClear="True" Date="{Binding DateOnly, Source={x:Reference self}}" />
    <material:TimePickerField
      Title="{Binding LabelTextTime, Source={x:Reference self}}"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="End"
      AllowClear="True"
      Format="HH:mm"
      Time="{Binding TimeOnly, Source={x:Reference self}}" />
  </HorizontalStackLayout>
</ContentView>
